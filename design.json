{
  "designSystem": {
    "name": "Modern Dark Product Landing",
    "version": "1.0.0",
    "description": "A sophisticated dark-themed design system for product landing pages with emphasis on minimalism, hierarchy, and modern aesthetics"
  },

  "colorPalette": {
    "primary": {
      "background": "#0a0a0a",
      "surface": "#111111",
      "elevated": "#1a1a1a",
      "border": "#2a2a2a"
    },
    "text": {
      "primary": "#ffffff",
      "secondary": "#a0a0a0",
      "muted": "#666666",
      "accent": "#00ff88"
    },
    "interactive": {
      "primary": "#ffffff",
      "primaryHover": "#f0f0f0",
      "secondary": "#333333",
      "secondaryHover": "#444444"
    }
  },

  "typography": {
    "fontFamily": {
      "primary": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
      "mono": "'SF Mono', 'Monaco', 'Cascadia Code', monospace"
    },
    "scale": {
      "hero": {
        "fontSize": "clamp(2.5rem, 5vw, 4rem)",
        "fontWeight": 600,
        "lineHeight": 1.1,
        "letterSpacing": "-0.02em"
      },
      "h1": {
        "fontSize": "clamp(2rem, 4vw, 3rem)",
        "fontWeight": 600,
        "lineHeight": 1.2,
        "letterSpacing": "-0.01em"
      },
      "h2": {
        "fontSize": "clamp(1.5rem, 3vw, 2rem)",
        "fontWeight": 500,
        "lineHeight": 1.3
      },
      "body": {
        "fontSize": "1rem",
        "fontWeight": 400,
        "lineHeight": 1.6
      },
      "small": {
        "fontSize": "0.875rem",
        "fontWeight": 400,
        "lineHeight": 1.5
      },
      "caption": {
        "fontSize": "0.75rem",
        "fontWeight": 500,
        "lineHeight": 1.4,
        "letterSpacing": "0.05em",
        "textTransform": "uppercase"
      }
    }
  },

  "spacing": {
    "scale": "1.25",
    "base": "1rem",
    "values": {
      "xs": "0.25rem",
      "sm": "0.5rem",
      "md": "1rem",
      "lg": "1.5rem",
      "xl": "2rem",
      "2xl": "3rem",
      "3xl": "4rem",
      "4xl": "6rem",
      "5xl": "8rem"
    },
    "section": {
      "vertical": "clamp(4rem, 8vw, 8rem)",
      "horizontal": "clamp(1rem, 5vw, 2rem)"
    }
  },

  "layout": {
    "container": {
      "maxWidth": "1200px",
      "padding": "0 clamp(1rem, 5vw, 2rem)",
      "margin": "0 auto"
    },
    "grid": {
      "columns": 12,
      "gap": "2rem",
      "breakpoints": {
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px"
      }
    }
  },

  "components": {
    "navigation": {
      "structure": "fixed top navigation with logo left, links center, CTA right",
      "styling": {
        "background": "rgba(10, 10, 10, 0.8)",
        "backdropFilter": "blur(20px)",
        "border": "1px solid rgba(255, 255, 255, 0.1)",
        "padding": "1rem 0",
        "height": "4rem"
      }
    },

    "hero": {
      "layout": "centered content with large heading, subtext, and CTA",
      "structure": [
        "Large headline (hero typography)",
        "Supporting text (body typography, muted color)",
        "Primary CTA button",
        "Optional secondary action"
      ],
      "spacing": {
        "paddingTop": "8rem",
        "paddingBottom": "6rem",
        "gap": "2rem"
      }
    },

    "featureSection": {
      "layout": "alternating text and visual content",
      "structure": [
        "Section headline",
        "Grid of features (2-3 columns on desktop, 1 on mobile)",
        "Each feature: icon/visual + title + description"
      ],
      "styling": {
        "background": "primary.background",
        "padding": "section.vertical 0"
      }
    },

    "productShowcase": {
      "layout": "large centered product image with surrounding text",
      "structure": [
        "Prominent product visual (dark background, subtle shadows)",
        "Feature callouts positioned around the visual",
        "Supporting text blocks"
      ],
      "visual": {
        "imageStyle": "dark background with subtle gradients",
        "shadows": "multiple layered shadows for depth",
        "borders": "subtle borders with low opacity"
      }
    },

    "button": {
      "primary": {
        "background": "text.primary",
        "color": "primary.background",
        "padding": "0.75rem 1.5rem",
        "borderRadius": "0.5rem",
        "fontWeight": 500,
        "transition": "all 0.2s ease"
      },
      "secondary": {
        "background": "transparent",
        "color": "text.secondary",
        "border": "1px solid interactive.secondary",
        "padding": "0.75rem 1.5rem",
        "borderRadius": "0.5rem"
      }
    },

    "card": {
      "styling": {
        "background": "primary.surface",
        "border": "1px solid primary.border",
        "borderRadius": "0.75rem",
        "padding": "1.5rem",
        "backdropFilter": "blur(10px)"
      },
      "hover": {
        "transform": "translateY(-2px)",
        "boxShadow": "0 8px 25px rgba(0, 0, 0, 0.3)"
      }
    }
  },

  "visualEffects": {
    "shadows": {
      "subtle": "0 1px 3px rgba(0, 0, 0, 0.3)",
      "medium": "0 4px 12px rgba(0, 0, 0, 0.4)",
      "large": "0 8px 25px rgba(0, 0, 0, 0.5)",
      "product": "0 20px 40px rgba(0, 0, 0, 0.6)"
    },
    "gradients": {
      "subtle": "linear-gradient(135deg, rgba(255, 255, 255, 0.02) 0%, rgba(255, 255, 255, 0.01) 100%)",
      "accent": "linear-gradient(135deg, #00ff88 0%, #00cc70 100%)"
    },
    "blur": {
      "backdrop": "blur(20px)",
      "subtle": "blur(10px)"
    }
  },

  "animations": {
    "transitions": {
      "fast": "0.15s ease",
      "medium": "0.3s ease",
      "slow": "0.5s ease"
    },
    "hover": {
      "scale": "scale(1.02)",
      "lift": "translateY(-2px)"
    },
    "entrance": {
      "fadeUp": "opacity 0.6s ease, transform 0.6s ease"
    }
  },

  "pageStructure": {
    "sections": [
      {
        "name": "Navigation",
        "position": "fixed-top",
        "background": "transparent-blur"
      },
      {
        "name": "Hero",
        "layout": "centered",
        "content": ["headline", "subtext", "cta"]
      },
      {
        "name": "Features Overview",
        "layout": "grid",
        "columns": "2-3",
        "content": ["feature cards"]
      },
      {
        "name": "Product Showcase",
        "layout": "alternating",
        "content": ["large product visual", "feature callouts"]
      },
      {
        "name": "Detailed Features",
        "layout": "stacked sections",
        "content": ["individual feature deep-dives"]
      },
      {
        "name": "Social Proof",
        "layout": "centered",
        "content": ["testimonials or logos"]
      },
      {
        "name": "Footer",
        "layout": "multi-column",
        "content": ["links", "company info", "social"]
      }
    ]
  },

  "designPrinciples": {
    "hierarchy": "Strong typographic hierarchy with clear size relationships",
    "contrast": "High contrast between text and background for readability",
    "whitespace": "Generous whitespace for breathing room and focus",
    "consistency": "Consistent spacing, typography, and component styling",
    "minimalism": "Clean, uncluttered interface with focus on content",
    "depth": "Subtle shadows and layers to create visual depth",
    "responsiveness": "Fluid typography and spacing that adapts to screen size"
  },

  "interactionPatterns": {
    "hover": "Subtle animations on interactive elements",
    "focus": "Clear focus states for accessibility",
    "loading": "Smooth transitions between states",
    "scroll": "Parallax or reveal animations on scroll"
  }
}
