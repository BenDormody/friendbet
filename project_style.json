{
  "styleGuide": {
    "overview": {
      "designSystem": "Modern dark theme with neon green accents",
      "inspiration": "Sports betting platform with gamified elements",
      "targetAudience": "Young adults, casual bettors, fantasy sports enthusiasts",
      "designPrinciples": [
        "High contrast for readability",
        "Card-based modular layout",
        "Clear visual hierarchy",
        "Prominent CTAs with accent colors",
        "Playful yet professional tone"
      ]
    },
    "colorPalette": {
      "primary": {
        "background": "#0a0a0a",
        "backgroundSecondary": "#1a1a1a",
        "backgroundCard": "#1e1e1e",
        "backgroundCardHover": "#252525"
      },
      "accent": {
        "neonGreen": "#c4ff0d",
        "neonGreenDark": "#a8db0a",
        "liveRed": "#ff4757",
        "winGreen": "#2ecc71",
        "loseRed": "#e74c3c",
        "warning": "#f39c12"
      },
      "text": {
        "primary": "#ffffff",
        "secondary": "#a0a0a0",
        "muted": "#666666",
        "inverse": "#0a0a0a"
      },
      "semantic": {
        "success": "#2ecc71",
        "error": "#e74c3c",
        "warning": "#f39c12",
        "info": "#3498db"
      }
    },
    "typography": {
      "fontFamilies": {
        "primary": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
        "display": "'Bebas Neue', 'Impact', sans-serif",
        "monospace": "'Roboto Mono', monospace"
      },
      "scale": {
        "h1": {
          "fontSize": "3rem",
          "fontWeight": "800",
          "lineHeight": "1.2",
          "letterSpacing": "-0.02em",
          "usage": "Page titles, hero headings"
        },
        "h2": {
          "fontSize": "2rem",
          "fontWeight": "700",
          "lineHeight": "1.3",
          "letterSpacing": "-0.01em",
          "usage": "Section titles"
        },
        "h3": {
          "fontSize": "1.5rem",
          "fontWeight": "600",
          "lineHeight": "1.4",
          "usage": "Card titles, subsections"
        },
        "h4": {
          "fontSize": "1.125rem",
          "fontWeight": "600",
          "lineHeight": "1.5",
          "usage": "Small headings"
        },
        "body": {
          "fontSize": "1rem",
          "fontWeight": "400",
          "lineHeight": "1.6",
          "usage": "Body text, descriptions"
        },
        "small": {
          "fontSize": "0.875rem",
          "fontWeight": "400",
          "lineHeight": "1.5",
          "usage": "Captions, labels"
        },
        "caption": {
          "fontSize": "0.75rem",
          "fontWeight": "500",
          "lineHeight": "1.4",
          "textTransform": "uppercase",
          "letterSpacing": "0.05em",
          "usage": "Badges, tags, small labels"
        }
      }
    },
    "spacing": {
      "scale": {
        "xs": "0.25rem",
        "sm": "0.5rem",
        "md": "1rem",
        "lg": "1.5rem",
        "xl": "2rem",
        "2xl": "3rem",
        "3xl": "4rem"
      },
      "usage": {
        "componentPadding": "1rem",
        "cardPadding": "1.5rem",
        "sectionMargin": "3rem",
        "gridGap": "1.5rem"
      }
    },
    "borderRadius": {
      "none": "0",
      "sm": "0.375rem",
      "md": "0.75rem",
      "lg": "1rem",
      "xl": "1.5rem",
      "full": "9999px",
      "usage": {
        "buttons": "9999px",
        "cards": "1.5rem",
        "inputs": "0.75rem",
        "badges": "0.375rem"
      }
    },
    "shadows": {
      "sm": "0 1px 2px rgba(0, 0, 0, 0.3)",
      "md": "0 4px 6px rgba(0, 0, 0, 0.4)",
      "lg": "0 10px 15px rgba(0, 0, 0, 0.5)",
      "xl": "0 20px 25px rgba(0, 0, 0, 0.6)",
      "neonGlow": "0 0 20px rgba(196, 255, 13, 0.3)",
      "cardHover": "0 8px 16px rgba(0, 0, 0, 0.6)"
    },
    "components": {
      "buttons": {
        "primary": {
          "description": "Main action button with neon green",
          "backgroundColor": "#c4ff0d",
          "color": "#0a0a0a",
          "padding": "0.75rem 2rem",
          "borderRadius": "9999px",
          "fontWeight": "600",
          "fontSize": "1rem",
          "textTransform": "uppercase",
          "letterSpacing": "0.05em",
          "border": "none",
          "cursor": "pointer",
          "transition": "all 0.3s ease",
          "hover": {
            "backgroundColor": "#a8db0a",
            "transform": "translateY(-2px)",
            "boxShadow": "0 0 20px rgba(196, 255, 13, 0.4)"
          },
          "active": {
            "transform": "translateY(0)"
          },
          "disabled": {
            "backgroundColor": "#666666",
            "cursor": "not-allowed",
            "opacity": "0.5"
          }
        },
        "secondary": {
          "description": "Secondary actions with outline style",
          "backgroundColor": "transparent",
          "color": "#ffffff",
          "padding": "0.75rem 2rem",
          "borderRadius": "9999px",
          "fontWeight": "600",
          "fontSize": "1rem",
          "border": "2px solid #ffffff",
          "cursor": "pointer",
          "transition": "all 0.3s ease",
          "hover": {
            "backgroundColor": "#ffffff",
            "color": "#0a0a0a",
            "transform": "translateY(-2px)"
          }
        },
        "ghost": {
          "description": "Minimal button for tertiary actions",
          "backgroundColor": "transparent",
          "color": "#a0a0a0",
          "padding": "0.5rem 1rem",
          "borderRadius": "0.75rem",
          "fontWeight": "500",
          "fontSize": "0.875rem",
          "border": "none",
          "cursor": "pointer",
          "transition": "all 0.2s ease",
          "hover": {
            "backgroundColor": "#1a1a1a",
            "color": "#ffffff"
          }
        },
        "icon": {
          "description": "Icon-only button",
          "backgroundColor": "#1a1a1a",
          "color": "#ffffff",
          "padding": "0.75rem",
          "borderRadius": "50%",
          "width": "3rem",
          "height": "3rem",
          "display": "flex",
          "alignItems": "center",
          "justifyContent": "center",
          "border": "none",
          "cursor": "pointer",
          "transition": "all 0.2s ease",
          "hover": {
            "backgroundColor": "#252525",
            "transform": "scale(1.05)"
          }
        },
        "liveBadge": {
          "description": "Live indicator badge",
          "backgroundColor": "#ff4757",
          "color": "#ffffff",
          "padding": "0.5rem 1.25rem",
          "borderRadius": "9999px",
          "fontWeight": "700",
          "fontSize": "0.875rem",
          "textTransform": "uppercase",
          "letterSpacing": "0.05em",
          "display": "inline-flex",
          "alignItems": "center",
          "gap": "0.5rem",
          "animation": "pulse 2s ease-in-out infinite"
        }
      },
      "cards": {
        "base": {
          "description": "Standard card container",
          "backgroundColor": "#1e1e1e",
          "borderRadius": "1.5rem",
          "padding": "1.5rem",
          "boxShadow": "0 4px 6px rgba(0, 0, 0, 0.4)",
          "transition": "all 0.3s ease",
          "hover": {
            "backgroundColor": "#252525",
            "boxShadow": "0 8px 16px rgba(0, 0, 0, 0.6)",
            "transform": "translateY(-4px)"
          }
        },
        "balanceCard": {
          "description": "User balance display card",
          "backgroundColor": "#1e1e1e",
          "borderRadius": "1.5rem",
          "padding": "2rem",
          "display": "flex",
          "flexDirection": "column",
          "gap": "1rem",
          "components": {
            "coinIcon": {
              "fontSize": "3rem",
              "filter": "drop-shadow(0 0 10px rgba(255, 215, 0, 0.5))"
            },
            "balanceAmount": {
              "fontSize": "3rem",
              "fontWeight": "800",
              "color": "#c4ff0d",
              "textShadow": "0 0 20px rgba(196, 255, 13, 0.3)"
            },
            "changeIndicator": {
              "fontSize": "0.875rem",
              "color": "#2ecc71",
              "fontWeight": "600"
            },
            "stats": {
              "display": "grid",
              "gridTemplateColumns": "repeat(3, 1fr)",
              "gap": "1rem",
              "marginTop": "1rem",
              "paddingTop": "1rem",
              "borderTop": "1px solid #333333"
            }
          }
        },
        "ticketCard": {
          "description": "Betting ticket/event card",
          "backgroundColor": "#1e1e1e",
          "borderRadius": "1.5rem",
          "padding": "1.5rem",
          "display": "flex",
          "flexDirection": "column",
          "gap": "1rem",
          "components": {
            "header": {
              "display": "flex",
              "justifyContent": "space-between",
              "alignItems": "center",
              "marginBottom": "1rem"
            },
            "teamLogos": {
              "display": "flex",
              "alignItems": "center",
              "gap": "1rem",
              "logo": {
                "width": "4rem",
                "height": "4rem",
                "borderRadius": "50%",
                "border": "2px solid #333333"
              }
            },
            "score": {
              "fontSize": "2.5rem",
              "fontWeight": "800",
              "color": "#ffffff"
            },
            "statusBadge": {
              "position": "absolute",
              "top": "1rem",
              "right": "1rem"
            }
          }
        },
        "leagueCard": {
          "description": "League summary card",
          "backgroundColor": "#1e1e1e",
          "borderRadius": "1.5rem",
          "padding": "1.5rem",
          "cursor": "pointer",
          "components": {
            "header": {
              "display": "flex",
              "justifyContent": "space-between",
              "alignItems": "start",
              "marginBottom": "1rem"
            },
            "leagueName": {
              "fontSize": "1.5rem",
              "fontWeight": "700",
              "color": "#ffffff",
              "marginBottom": "0.5rem"
            },
            "memberCount": {
              "fontSize": "0.875rem",
              "color": "#a0a0a0",
              "display": "flex",
              "alignItems": "center",
              "gap": "0.5rem"
            },
            "leaderboard": {
              "display": "flex",
              "flexDirection": "column",
              "gap": "0.5rem",
              "marginTop": "1rem"
            },
            "footer": {
              "display": "flex",
              "justifyContent": "space-between",
              "alignItems": "center",
              "marginTop": "1rem",
              "paddingTop": "1rem",
              "borderTop": "1px solid #333333"
            }
          }
        },
        "betComboCard": {
          "description": "Active bet combo display",
          "backgroundColor": "#1e1e1e",
          "borderRadius": "1.5rem",
          "padding": "1.5rem",
          "border": "2px solid #c4ff0d",
          "boxShadow": "0 0 20px rgba(196, 255, 13, 0.2)",
          "components": {
            "title": {
              "fontSize": "1rem",
              "fontWeight": "700",
              "color": "#c4ff0d",
              "textTransform": "uppercase",
              "marginBottom": "0.5rem"
            },
            "amount": {
              "fontSize": "0.875rem",
              "color": "#a0a0a0"
            },
            "winnings": {
              "fontSize": "1.125rem",
              "fontWeight": "600",
              "color": "#2ecc71",
              "marginTop": "0.5rem"
            }
          }
        }
      },
      "navigation": {
        "topBar": {
          "description": "Main navigation bar",
          "backgroundColor": "#0a0a0a",
          "height": "5rem",
          "padding": "0 2rem",
          "display": "flex",
          "alignItems": "center",
          "justifyContent": "space-between",
          "borderBottom": "1px solid #1a1a1a",
          "position": "sticky",
          "top": "0",
          "zIndex": "1000",
          "components": {
            "logo": {
              "display": "flex",
              "alignItems": "center",
              "gap": "0.75rem",
              "icon": {
                "width": "2.5rem",
                "height": "2.5rem"
              },
              "text": {
                "fontSize": "1.5rem",
                "fontWeight": "800",
                "color": "#ffffff",
                "textTransform": "uppercase"
              }
            },
            "navLinks": {
              "display": "flex",
              "gap": "2rem",
              "link": {
                "color": "#a0a0a0",
                "fontSize": "0.875rem",
                "fontWeight": "600",
                "textTransform": "uppercase",
                "letterSpacing": "0.05em",
                "textDecoration": "none",
                "transition": "color 0.2s ease",
                "hover": {
                  "color": "#ffffff"
                },
                "active": {
                  "color": "#c4ff0d"
                }
              }
            },
            "userSection": {
              "display": "flex",
              "alignItems": "center",
              "gap": "1rem",
              "avatar": {
                "width": "2.5rem",
                "height": "2.5rem",
                "borderRadius": "50%",
                "border": "2px solid #c4ff0d"
              }
            }
          }
        },
        "categoryScroll": {
          "description": "Horizontal scrolling category selector",
          "display": "flex",
          "gap": "1rem",
          "overflowX": "auto",
          "padding": "1rem 0",
          "scrollbarWidth": "none",
          "categoryItem": {
            "display": "flex",
            "flexDirection": "column",
            "alignItems": "center",
            "gap": "0.5rem",
            "minWidth": "5rem",
            "cursor": "pointer",
            "transition": "all 0.2s ease",
            "icon": {
              "width": "3rem",
              "height": "3rem",
              "display": "flex",
              "alignItems": "center",
              "justifyContent": "center",
              "fontSize": "1.5rem",
              "opacity": "0.7",
              "transition": "all 0.2s ease"
            },
            "label": {
              "fontSize": "0.75rem",
              "color": "#a0a0a0",
              "textTransform": "uppercase",
              "letterSpacing": "0.05em",
              "fontWeight": "600",
              "transition": "color 0.2s ease"
            },
            "hover": {
              "icon": {
                "opacity": "1",
                "transform": "scale(1.1)"
              },
              "label": {
                "color": "#ffffff"
              }
            },
            "active": {
              "icon": {
                "opacity": "1",
                "filter": "drop-shadow(0 0 10px currentColor)"
              },
              "label": {
                "color": "#c4ff0d"
              }
            }
          }
        }
      },
      "forms": {
        "input": {
          "description": "Text input field",
          "backgroundColor": "#1e1e1e",
          "color": "#ffffff",
          "border": "2px solid #333333",
          "borderRadius": "0.75rem",
          "padding": "0.875rem 1rem",
          "fontSize": "1rem",
          "fontWeight": "500",
          "transition": "all 0.2s ease",
          "focus": {
            "border": "2px solid #c4ff0d",
            "outline": "none",
            "boxShadow": "0 0 0 3px rgba(196, 255, 13, 0.1)"
          },
          "error": {
            "border": "2px solid #e74c3c"
          },
          "placeholder": {
            "color": "#666666"
          }
        },
        "select": {
          "description": "Dropdown select",
          "backgroundColor": "#1e1e1e",
          "color": "#ffffff",
          "border": "2px solid #333333",
          "borderRadius": "0.75rem",
          "padding": "0.875rem 1rem",
          "fontSize": "1rem",
          "fontWeight": "500",
          "cursor": "pointer",
          "transition": "all 0.2s ease"
        },
        "checkbox": {
          "description": "Checkbox input",
          "width": "1.25rem",
          "height": "1.25rem",
          "borderRadius": "0.25rem",
          "border": "2px solid #333333",
          "backgroundColor": "#1e1e1e",
          "cursor": "pointer",
          "checked": {
            "backgroundColor": "#c4ff0d",
            "border": "2px solid #c4ff0d"
          }
        },
        "label": {
          "description": "Form label",
          "fontSize": "0.875rem",
          "fontWeight": "600",
          "color": "#a0a0a0",
          "textTransform": "uppercase",
          "letterSpacing": "0.05em",
          "marginBottom": "0.5rem",
          "display": "block"
        }
      },
      "badges": {
        "status": {
          "open": {
            "backgroundColor": "#3498db",
            "color": "#ffffff",
            "padding": "0.25rem 0.75rem",
            "borderRadius": "0.375rem",
            "fontSize": "0.75rem",
            "fontWeight": "700",
            "textTransform": "uppercase",
            "letterSpacing": "0.05em"
          },
          "live": {
            "backgroundColor": "#ff4757",
            "color": "#ffffff",
            "padding": "0.25rem 0.75rem",
            "borderRadius": "0.375rem",
            "fontSize": "0.75rem",
            "fontWeight": "700",
            "textTransform": "uppercase",
            "letterSpacing": "0.05em",
            "animation": "pulse 2s ease-in-out infinite"
          },
          "closed": {
            "backgroundColor": "#666666",
            "color": "#ffffff",
            "padding": "0.25rem 0.75rem",
            "borderRadius": "0.375rem",
            "fontSize": "0.75rem",
            "fontWeight": "700",
            "textTransform": "uppercase",
            "letterSpacing": "0.05em"
          },
          "won": {
            "backgroundColor": "#2ecc71",
            "color": "#ffffff",
            "padding": "0.25rem 0.75rem",
            "borderRadius": "0.375rem",
            "fontSize": "0.75rem",
            "fontWeight": "700",
            "textTransform": "uppercase",
            "letterSpacing": "0.05em"
          },
          "lost": {
            "backgroundColor": "#e74c3c",
            "color": "#ffffff",
            "padding": "0.25rem 0.75rem",
            "borderRadius": "0.375rem",
            "fontSize": "0.75rem",
            "fontWeight": "700",
            "textTransform": "uppercase",
            "letterSpacing": "0.05em"
          }
        },
        "count": {
          "description": "Notification count badge",
          "backgroundColor": "#ff4757",
          "color": "#ffffff",
          "width": "1.25rem",
          "height": "1.25rem",
          "borderRadius": "50%",
          "display": "flex",
          "alignItems": "center",
          "justifyContent": "center",
          "fontSize": "0.625rem",
          "fontWeight": "700",
          "position": "absolute",
          "top": "-0.25rem",
          "right": "-0.25rem"
        }
      },
      "leaderboard": {
        "description": "Leaderboard row component",
        "item": {
          "display": "flex",
          "alignItems": "center",
          "justifyContent": "space-between",
          "padding": "0.75rem 1rem",
          "borderRadius": "0.75rem",
          "backgroundColor": "#1a1a1a",
          "marginBottom": "0.5rem",
          "transition": "all 0.2s ease",
          "hover": {
            "backgroundColor": "#252525"
          },
          "rank": {
            "fontSize": "1.25rem",
            "fontWeight": "800",
            "color": "#c4ff0d",
            "width": "2rem",
            "textAlign": "center"
          },
          "user": {
            "display": "flex",
            "alignItems": "center",
            "gap": "0.75rem",
            "flex": "1",
            "avatar": {
              "width": "2rem",
              "height": "2rem",
              "borderRadius": "50%"
            },
            "name": {
              "fontSize": "0.875rem",
              "fontWeight": "600",
              "color": "#ffffff"
            }
          },
          "balance": {
            "fontSize": "1rem",
            "fontWeight": "700",
            "color": "#c4ff0d"
          }
        }
      },
      "calendar": {
        "description": "Calendar date selector",
        "container": {
          "display": "grid",
          "gridTemplateColumns": "repeat(7, 1fr)",
          "gap": "0.5rem"
        },
        "dayButton": {
          "width": "3rem",
          "height": "3rem",
          "borderRadius": "50%",
          "display": "flex",
          "flexDirection": "column",
          "alignItems": "center",
          "justifyContent": "center",
          "backgroundColor": "#1a1a1a",
          "cursor": "pointer",
          "transition": "all 0.2s ease",
          "dayLabel": {
            "fontSize": "0.625rem",
            "color": "#666666",
            "textTransform": "uppercase",
            "fontWeight": "600"
          },
          "dateNumber": {
            "fontSize": "1rem",
            "fontWeight": "700",
            "color": "#ffffff"
          },
          "hover": {
            "backgroundColor": "#252525",
            "transform": "scale(1.05)"
          },
          "active": {
            "backgroundColor": "#c4ff0d",
            "dayLabel": {
              "color": "#0a0a0a"
            },
            "dateNumber": {
              "color": "#0a0a0a"
            }
          }
        }
      },
      "odds": {
        "description": "Odds button/selector",
        "button": {
          "backgroundColor": "#1a1a1a",
          "color": "#ffffff",
          "border": "2px solid #333333",
          "borderRadius": "0.75rem",
          "padding": "0.75rem 1.25rem",
          "fontSize": "1rem",
          "fontWeight": "700",
          "cursor": "pointer",
          "transition": "all 0.2s ease",
          "display": "flex",
          "flexDirection": "column",
          "alignItems": "center",
          "gap": "0.25rem",
          "label": {
            "fontSize": "0.75rem",
            "color": "#a0a0a0",
            "fontWeight": "600"
          },
          "value": {
            "fontSize": "1.125rem",
            "color": "#ffffff",
            "fontWeight": "800"
          },
          "hover": {
            "backgroundColor": "#252525",
            "border": "2px solid #c4ff0d"
          },
          "selected": {
            "backgroundColor": "#c4ff0d",
            "border": "2px solid #c4ff0d",
            "label": {
              "color": "#0a0a0a"
            },
            "value": {
              "color": "#0a0a0a"
            }
          }
        }
      },
      "modal": {
        "description": "Modal dialog overlay",
        "overlay": {
          "position": "fixed",
          "top": "0",
          "left": "0",
          "width": "100%",
          "height": "100%",
          "backgroundColor": "rgba(0, 0, 0, 0.8)",
          "display": "flex",
          "alignItems": "center",
          "justifyContent": "center",
          "zIndex": "2000",
          "backdropFilter": "blur(4px)"
        },
        "container": {
          "backgroundColor": "#1e1e1e",
          "borderRadius": "1.5rem",
          "padding": "2rem",
          "maxWidth": "36rem",
          "width": "90%",
          "maxHeight": "90vh",
          "overflowY": "auto",
          "boxShadow": "0 20px 25px rgba(0, 0, 0, 0.6)"
        },
        "header": {
          "display": "flex",
          "justifyContent": "space-between",
          "alignItems": "center",
          "marginBottom": "1.5rem",
          "title": {
            "fontSize": "1.5rem",
            "fontWeight": "700",
            "color": "#ffffff"
          }
        }
      },
      "toast": {
        "description": "Toast notification",
        "container": {
          "position": "fixed",
          "bottom": "2rem",
          "right": "2rem",
          "backgroundColor": "#1e1e1e",
          "color": "#ffffff",
          "padding": "1rem 1.5rem",
          "borderRadius": "0.75rem",
          "boxShadow": "0 10px 15px rgba(0, 0, 0, 0.5)",
          "display": "flex",
          "alignItems": "center",
          "gap": "1rem",
